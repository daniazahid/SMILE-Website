<!DOCTYPE HTML>
<html>
	<head>
		<title>Smile</title>
		<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
		<link rel="stylesheet" href="/stylesheets/newmain.css">
		<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" integrity="sha384-			lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">
	</head>
	<nav class="navbar navbar-default">
		<div class="container-fluid">
			<div class="navbar-header" >
				
				<a class="navbar-brand" href="/"> <i class="fas fa-tooth"></i> Smile</a>
			</div>
			<div class="collapse navbar-collapse">
				<ul class="nav navbar-nav navbar-right">
					<% if(!currentUser){ %>
						<li><a href="/campgrounds">Home</a></li>
						<li><a href="/about">About</a></li>
						<li><a href="/login">Login</a></li>
						<li><a href="/register">SignUp</a></li>
					    

					<% } else{ %>
					 <%if(currentUser.Employee.isEmployee || currentUser.isAdmin){ %>
						<li><a href="/campgrounds">Home</a></li>
						<li><a href="/about">About</a></li>
					    <li><a href="/campgrounds/appointments">Appointments</a></li>
						<li><a href="#">Signed in as <%=currentUser.username %></a></li>
						<li><a href="/logout">Logout</a></li>
					<% }else{ %>
						<li><a href="/campgrounds">Home</a></li>
					    <li><a href="/about">About</a></li>
						<li><a href="/profile">Profile</a></li>
						<li><a href="#">Signed in as <%=currentUser.username %></a></li>
						<li><a href="/logout">Logout</a></li>
						<% } %>
				<%	} %>
				</ul>
			</div>
		
		</div>
	</nav>
	<% if(error && error.length > 0) { %>
	<div class="container">
		<div class="alert alert-danger" role="alert">
			<%= error %>
		</div>
	</div>	
	<%	} %>
	
	<% if(success && success.length > 0) { %>
		<div class="container">
			<div class="alert alert-success" role="alert">
				<%= success %>
			</div>
		</div>
	<%	} %>
	<% if(info && info.length > 0) { %>
		<div class="container">
			<div class="alert alert-info" role="alert">
				<%= info %>
			</div>
		</div>
	<%	} %>
	<% if(warning && warning.length > 0) { %>
		<div class="container">
			<div class="alert alert-warning" role="alert">
				<%= warning %>
			</div>
		</div>
	<%	} %>
<body>
	
